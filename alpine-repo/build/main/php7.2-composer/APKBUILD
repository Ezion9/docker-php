pkgname=php7.2-composer
_pkgreal=composer
pkgver=1.4.2
_pkgver=$pkgver
pkgrel=1
_phpver=7.2
pkgdesc="Dependency manager for PHP $_phpver"
url="https://getcomposer.org/"
arch="noarch"
license="MIT"
depends="php7.2 php7.2-phar php7.2-json php7.2-mbstring php7.2-openssl php7.2-zip php7.2-zlib"
makedepends=""
source="$_pkgreal-$_pkgver.phar::https://getcomposer.org/download/$_pkgver/$_pkgreal.phar"
options="!check"

package() {
    replaces="composer php7.1-composer"
    install -m 0755 -D "$srcdir"/$_pkgreal-$_pkgver.phar "$pkgdir"/usr/bin/$_pkgreal
}
