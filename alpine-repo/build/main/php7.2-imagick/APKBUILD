# Maintainer: "Peter Kokot <peterkokot@gmail.com>"

pkgname=php7.2-imagick
_pkgreal=imagick
pkgver=3.4.3
pkgrel=0
_phpver=7.2
pkgdesc="ImageMagick extension for PHP $_phpver"
url="http://pecl.php.net/package/$_pkgreal"
arch="all"
license="PHP-3"
depends="php7.2-common>7.2.0"
makedepends="php7.2-dev>7.2.0 imagemagick-dev libtool"
source="http://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
builddir="$srcdir/$_pkgreal-$pkgver"

prepare() {
    default_prepare || return 1
}

build() {
    cd "$builddir"
    phpize || return 1
    EXTENSION_DIR=/usr/lib/php/$_phpver/modules ./configure --prefix=/usr \
        --with-php-config=/usr/bin/php-config || return 1
    make || return 1
}

check() {
    cd "$builddir"

    local allow_fail='yes'

    NO_INTERACTION=1 REPORT_EXIT_STATUS=1 \
        SKIP_SLOW_TESTS=1 SKIP_ONLINE_TESTS=1 TEST_TIMEOUT=10 \
        TZ= LANG= LC_ALL= \
        make test || [ "$allow_fail" = yes ] || return 1
}

package() {
    mkdir -p "$pkgdir" || return 1
    install -d $pkgdir/ || return 1
    make -C "$builddir" INSTALL_ROOT="$pkgdir" install || return 1
    install -d "$pkgdir"/etc/php/$_phpver/conf.d || return 1
    echo "extension=$_pkgreal.so" > "$pkgdir"/etc/php/$_phpver/conf.d/$_pkgreal.ini || return 1
}
sha512sums="2cb2b856cf83a78d3542cdf7c69554dcc063a0541e9092b24e5e1fbd8928066a4a3de154049d0202c35addbc5055ccfbb5910ae92f2f13da80ddfc025340ddcd  imagick-3.4.3.tgz"
