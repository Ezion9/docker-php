pkgname=php7.1-composer
_pkgreal=composer
pkgver=1.4.2
_pkgver=$pkgver
pkgrel=1
pkgdesc="Dependency manager for PHP"
url="https://getcomposer.org/"
arch="noarch"
license="MIT"
depends="php7.1 php7.1-phar php7.1-json php7.1-mbstring php7.1-openssl php7.1-zip php7.1-zlib"
makedepends=""
source="$_pkgreal-$_pkgver.phar::https://getcomposer.org/download/$_pkgver/$_pkgreal.phar"
options="!check"

package() {
    replaces="composer"
    install -m 0755 -D "$srcdir"/$_pkgreal-$_pkgver.phar "$pkgdir"/usr/bin/$_pkgreal
}
