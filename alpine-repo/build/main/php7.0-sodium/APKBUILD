# Maintainer: "Peter Kokot <peterkokot@gmail.com>"

pkgname=php7.0-sodium
_pkgreal=sodium
_pkglong=libsodium
pkgver=2.0.4
pkgrel=0
_phpver=7.0
pkgdesc="PHP $_phpver extension - Wrapper for the Sodium cryptographic library"
url="http://pecl.php.net/package/$_pkglong"
arch="all"
license="BSD-2"
depends="php7.0-common>7.0.0 libsodium"
makedepends="php7.0-dev>7.0.0 libsodium-dev"
source="http://pecl.php.net/get/$_pkglong-$pkgver.tgz"
builddir="$srcdir/$_pkglong-$pkgver"

prepare() {
  default_prepare
}

build() {
  local processors=$(nproc)

  cd "$builddir"

  phpize

  EXTENSION_DIR=/usr/lib/php/$_phpver/modules ./configure --prefix=/usr \
    --with-php-config=/usr/bin/php-config

  make -j$processors
}

check() {
  cd "$builddir"

  local allow_fail='no'

  NO_INTERACTION=1 REPORT_EXIT_STATUS=1 \
    SKIP_SLOW_TESTS=1 SKIP_ONLINE_TESTS=1 TEST_TIMEOUT=10 \
    TZ= LANG= LC_ALL= \
    make test || [ "$allow_fail" = yes ]
}

package() {
  mkdir -p "$pkgdir"
  install -d $pkgdir/
  make -C "$builddir" INSTALL_ROOT="$pkgdir" install
  install -d "$pkgdir"/etc/php/$_phpver/conf.d
  echo "extension=$_pkgreal.so" > "$pkgdir"/etc/php/$_phpver/conf.d/$_pkgreal.ini
}
sha512sums="bf3eea53f062611e5be2704fa2208376efb30d5e51ab72d1ab6ccf08d78ec8490d1c8cd09624374488fdfd0cfe3fdbf86733fc36fcad9026bb776618ddd70884  libsodium-2.0.4.tgz"
