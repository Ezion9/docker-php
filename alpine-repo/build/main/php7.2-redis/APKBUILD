# Maintainer: "Peter Kokot <peterkokot@gmail.com>"

pkgname=php7.2-redis
_pkgreal=redis
pkgver=3.1.3
pkgrel=1
_phpver=7.2
pkgdesc="PHP $_phpver extension for interfacing with Redis"
url="http://pecl.php.net/package/$_pkgreal"
arch="all"
license="PHP-3"
depends="php7.2-common>7.2.0 php7.2-session>7.2.0"
makedepends="php7.2-dev>7.2.0"
source="http://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
builddir="$srcdir/$_pkgreal-$pkgver"
options="!check"

prepare() {
  default_prepare
}

build() {
  local processors=$(nproc)

  cd "$builddir"

  phpize

  EXTENSION_DIR=/usr/lib/php/$_phpver/modules ./configure --prefix=/usr \
    --with-php-config=/usr/bin/php-config

  make -j$processors
}

check() {
  cd "$builddir"

  local allow_fail='no'

  NO_INTERACTION=1 REPORT_EXIT_STATUS=1 \
    SKIP_SLOW_TESTS=1 SKIP_ONLINE_TESTS=1 TEST_TIMEOUT=10 \
    TZ= LANG= LC_ALL= \
    make test || [ "$allow_fail" = yes ]
}

package() {
  mkdir -p "$pkgdir"
  install -d $pkgdir/
  make -C "$builddir" INSTALL_ROOT="$pkgdir" install
  install -d "$pkgdir"/etc/php/$_phpver/conf.d
  echo "extension=$_pkgreal" > "$pkgdir"/etc/php/$_phpver/conf.d/$_pkgreal.ini
}
sha512sums="269a45675e9547fdeebf9d9a1a36e6f75d6f9913ffc1069d0fc2a7f1a5d88ff4fb9f38693f488469339c2a7bfdfd81df102de5e12656e0662af166f874fc5fac  redis-3.1.3.tgz"
