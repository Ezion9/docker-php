# This file maintains consistent coding styles between different editors and IDEs.
# http://editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[{docker/bin/download-php, docker/bin/install-composer, docker/bin/install-php-ext}]
indent_style = space
indent_size = 2

[docker/Dockerfile*]
indent_style = space
indent_size = 4
