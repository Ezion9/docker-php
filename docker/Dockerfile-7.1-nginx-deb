FROM debian:jessie-slim

ARG DEBIAN_FRONTEND=noninteractive
ARG BUILD_DATE
ARG VCS_REF

LABEL org.label-schema.build-date=$BUILD_DATE \
      org.label-schema.vcs-url="https://github.com/php-earth/docker-php.git" \
      org.label-schema.vcs-ref=$VCS_REF \
      org.label-schema.schema-version="1.0" \
      org.label-schema.vendor="PHP.earth" \
      org.label-schema.name="docker-php" \
      org.label-schema.description="Docker For PHP Developers - Docker images with PHP, Nginx, OpenLiteSpeed, Apache, Alpine and Debian Slim" \
      org.label-schema.url="https://github.com/php-earth/docker-php"

# Custom helper scripts to download PHP and manage PHP extensions
COPY bin /usr/local/bin/
COPY tags/nginx-deb/etc/apt/preferences.d/backports /etc/apt/preferences.d/backports

ENV PHP_VER="7.1" \
    PHP_INI_DIR="/usr/local/etc/php" \
    PHP_CFLAGS="-fstack-protector-strong -fpic -fpie -O2" \
    PHP_CPPFLAGS="$PHP_CFLAGS" \
    PHP_LDFLAGS="-Wl,-O1 -Wl,--hash-style=both -pie" \
    # When using Composer, disable the warning about running commands as root/super user
    COMPOSER_ALLOW_SUPERUSER=1 \
    # Persistent runtime dependencies
    DEPS="libedit2 \
        libxml2 \
        runit \
        libssl1.0.0 \
        curl \
        ca-certificates \
        nginx \
        libgssapi-krb5-2" \
    # Build dependencies which get removed
    BUILD_DEPS="build-essential \
        autoconf \
        automake \
        libtool \
        bison \
        re2c \
        pkg-config \
        xz-utils \
        libc-dev \
        libedit-dev \
        libcurl4-openssl-dev \
        libbz2-dev \
        libkrb5-dev \
        libpcre3-dev \
        zlib1g-dev \
        libxml2-dev \
        libssl-dev"

RUN apt-get update && apt-get -y --no-install-recommends install curl ca-certificates \
    && echo 'deb http://ftp.debian.org/debian jessie-backports main' >> /etc/apt/sources.list \
    && echo 'deb http://packages.dotdeb.org jessie all' | tee --append /etc/apt/sources.list \
    && echo 'deb-src http://packages.dotdeb.org jessie all' | tee --append /etc/apt/sources.list \
    && echo 'deb http://packages.dotdeb.org jessie-nginx-http2 all' | tee --append /etc/apt/sources.list \
    && echo 'deb-src http://packages.dotdeb.org jessie-nginx-http2 all' | tee --append /etc/apt/sources.list \
    && curl https://www.dotdeb.org/dotdeb.gpg | apt-key add - \
    && apt-get update && apt-get -y --no-install-recommends install $DEPS $BUILD_DEPS \
    # PHP
    && mkdir -p $PHP_INI_DIR/conf.d \
    && cd /usr/src \
    && download-php $PHP_VER \
    && cd php-* \
    && export CFLAGS="$PHP_CFLAGS" \
              CPPFLAGS="$PHP_CPPFLAGS" \
              LDFLAGS="$PHP_LDFLAGS" \
    && ./configure \
        # Core configure options
        --with-libdir=/lib/x86_64-linux-gnu \
        --enable-phpdbg=no \
        --disable-rpath \
        --without-pear \
        # Bundled PHP extensions
        --enable-bcmath \
        --enable-calendar \
        --enable-mbstring \
        --enable-exif \
        --enable-ftp \
        --with-pcre-regex \
        --enable-mysqlnd \
        --with-openssl \
        --enable-zip \
        --enable-sysvsem \
        --enable-sysvshm \
        --enable-sysvmsg \
        --enable-shmop \
        --enable-sockets \
        --with-zlib \
        --with-zlib-dir \
        --with-bz2 \
        --with-curl \
        --with-mhash \
        --with-config-file-path="$PHP_INI_DIR" \
        --with-config-file-scan-dir="$PHP_INI_DIR/conf.d" \
        --disable-cgi \
        --with-libxml-dir=/usr \
        --with-libedit \
        --with-fpm-user=www-data \
        --with-fpm-group=www-data \
        --with-kerberos \
        --enable-opcache \
        --enable-fpm \
    && make -j "$(nproc)" \
    && make install \
    && { find /usr/local/bin /usr/local/sbin -type f -executable -exec strip --strip-all '{}' + || true; } \
    && cp /usr/local/etc/php-fpm.d/www.conf.default /usr/local/etc/php-fpm.d/www.conf \
    && mkdir /run/php \
    # Remove dependencies with removal of dependencies that got automatically installed
    && apt-get purge -y --auto-remove -o APT::AutoRemove::RecommendsImportant=false $BUILD_DEPS \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* /usr/src/* \
    && ln -sf /dev/stdout /var/log/nginx/access.log \
    && ln -sf /dev/stderr /var/log/nginx/error.log

COPY tags/nginx-deb /

CMD ["/sbin/runit-wrapper"]
