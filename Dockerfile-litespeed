FROM debian:jessie-slim

# Custom helper scripts to download PHP and manage PHP extensions
COPY download-php install-php-ext /usr/local/bin/

ENV LS_VER 1.4.25
ENV PHP_INI_DIR /usr/local/etc/php
ENV PHP_CFLAGS="-fstack-protector-strong -fpic -fpie -O2"
ENV PHP_CPPFLAGS="$PHP_CFLAGS"
ENV PHP_LDFLAGS="-Wl,-O1 -Wl,--hash-style=both -pie"

# Persistent runtime dependencies
ENV PHP_DEPS \
        libedit2 \
        zip \
        unzip \
        git \
        supervisor \
        libicu52 \
        libxslt1.1 \
        libxslt1-dev \
        libjpeg62-turbo \
        libfreetype6 \
        libxml2 \
        libxml2-dev \
        libgeoip-dev \
        wget \
        xz-utils

# PHP build dependencies which get removed
ENV BUILD_DEPS \
        build-essential \
        autoconf \
        automake \
        libtool \
        bison \
        re2c \
        pkg-config \
        libc-dev \
        libedit-dev \
        libcurl4-openssl-dev \
        libfreetype6-dev \
        libgd-dev \
        libbz2-dev \
        libfcgi-dev \
        libfcgi0ldbl \
        libkrb5-dev \
        libpq-dev \
        libicu-dev \
        rcs \
        libpcre3-dev \
        libexpat1-dev \
        zlib1g-dev \
        libpng-dev

RUN echo 'deb http://ftp.debian.org/debian jessie-backports main' >> /etc/apt/sources.list \
    && apt-get update && apt-get -y install curl ca-certificates --no-install-recommends \
    && apt-get -y install openssl libssl-dev -t jessie-backports --no-install-recommends \
    # PHP
    && mkdir -p $PHP_INI_DIR/conf.d \
    && apt-get install -y $PHP_DEPS $BUILD_DEPS --no-install-recommends \
    && cd /opt \
    && download-php \
    && cd php-* \
    && export CFLAGS="$PHP_CFLAGS" \
                  CPPFLAGS="$PHP_CPPFLAGS" \
                  LDFLAGS="$PHP_LDFLAGS" \
    && ./configure \
        # Bundled PHP extensions
        --enable-bcmath \
        --enable-calendar \
        --enable-mbstring \
        --enable-exif \
        --enable-ftp \
        --with-gd \
        --enable-gd-native-ttf \
        --with-jpeg-dir=/usr \
        --with-png-dir=/usr \
        --enable-intl \
        --with-pcre-regex \
        --enable-mysqlnd \
        --with-openssl \
        --with-xsl \
        --enable-zip \
        --enable-sysvsem \
        --enable-sysvshm \
        --enable-sysvmsg \
        --enable-shmop \
        --enable-sockets \
        --with-zlib \
        --with-zlib-dir \
        --with-bz2 \
        --with-curl \
        --with-gettext \
        --with-mhash \
        --with-config-file-path="$PHP_INI_DIR" \
        --with-config-file-scan-dir="$PHP_INI_DIR/conf.d" \
        --disable-cgi \
        --with-freetype-dir \
        --with-libxml-dir=/usr \
        --with-libedit \
        --disable-rpath \
        --enable-inline-optimization \
        --with-libdir=/lib/x86_64-linux-gnu \
        --with-kerberos \
        --enable-opcache \
        --with-litespeed \
    && make -j "$(nproc)" \
    && make install \
    && { find /usr/local/bin /usr/local/sbin -type f -executable -exec strip --strip-all '{}' + || true; } \
    && make clean \
    # OpenLiteSpeed
    && cd /opt \
    && curl -OL http://open.litespeedtech.com/packages/openlitespeed-$LS_VER.tgz \
    && tar -xf openlitespeed-$LS_VER.tgz && rm openlitespeed-$LS_VER.tgz \
    && cd openlitespeed-$LS_VER \
    && ./configure \
        --prefix=/usr/local/lsws \
        --with-openssl=/usr \
        --enable-http2 \
    && make && make install \
    && ln -sf /usr/local/bin/lsphp /usr/local/lsws/fcgi-bin/lsphp \
    && ln -sf /dev/stdout /usr/local/lsws/logs/access.log \
    && ln -sf /dev/stderr /usr/local/lsws/logs/error.log \
    # Composer
    && php -r "readfile('http://getcomposer.org/installer');" | php -- --install-dir=/usr/bin/ --filename=composer \
    # Remove build dependencies
    && apt-get purge -y --auto-remove $BUILD_DEPS \
    && apt-get -y autoremove \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* /opt/*

COPY litespeed/etc /etc
COPY litespeed/usr /usr

CMD ["/usr/bin/supervisord"]
